generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model CarouselImage {
    id      String @id @default(cuid())
    image   String
    imageId String
    link    String
}

model Service {
    id          String    @id @default(cuid())
    title       Product[]
    Image       String
    ImageId     String
    description String
}

model Product {
    id          String  @id @default(cuid())
    title       Service @relation(fields: [titleId], references: [id])
    titleId     String
    Image       String
    ImageId     String
    description String
}

